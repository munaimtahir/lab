# ==============================================================================
# Development Environment Configuration
# ==============================================================================
# This file is for local development using docker-compose in the infra/ folder
# Frontend: http://localhost:5173 (Vite dev server with hot reload)
# Backend: http://localhost:8000 (Django dev server)
# ==============================================================================

# Django Configuration
DJANGO_SECRET_KEY=dev-secret-key-change-for-production

# Database Configuration
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=lims
POSTGRES_USER=lims
POSTGRES_PASSWORD=lims

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Internal Docker service communication
API_BASE_URL=http://backend:8000

# Frontend API URL for local development
# Note: Must include /api prefix to match backend URL routing
VITE_API_URL=http://localhost:8000/api

# Backend configuration for local development
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,backend
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://localhost:8000
